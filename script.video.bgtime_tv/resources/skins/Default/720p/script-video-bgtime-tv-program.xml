	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
   
	<!-- Program View-->

	<controls id="5000">
		<control type="image">
			<posx>360</posx>
			<posy>90</posy>
			<width>560</width>
			<height>560</height>
			<texture>script-video-bgtime-tv-logo-big.png</texture>
		</control>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<texture>script-video-bgtime-tv-darker-blue.png</texture>
		</control>
		<!-- Timebar-->
		<control type="list" id='5003'>
			<posx>0</posx>
			<posy>0</posy>
			<width>1200</width>
			<height>40</height>
			<viewtype label="list">list</viewtype>
			<orientation>horizontal</orientation>
		</control>
		<!-- Program Date-->
		<control type="Button" id = '5010'>
			<posx>1180</posx>
			<posy>2</posy>
			<width>120</width>
			<height>36</height>
			<font>font13</font>
			<alignx>center</alignx>
			<aligny>center</aligny>
			<textcolor>ffffffff</textcolor>
			<texturefocus>script-video-bgtime-tv-very-lighter-blue.png</texturefocus>
			<texturenofocus>script-video-bgtime-tv-very-light-blue.png</texturenofocus>
			<label></label>
		</control>
		<control type="image" id = '5011'>
			<posx>1144</posx>
			<posy>2</posy>
			<width>36</width>
			<height>36</height>
			<texture>cal.png</texture>
		</control>
		<!-- List Channels-->
		<control type="list" id='5004'>
			<posx>0</posx>
			<posy>0</posy>
			<width>100</width>
			<height>70</height>
			<viewtype label="list">list</viewtype>
			<orientation>vertical</orientation>
			<focusposition>1</focusposition>
		</control>
		<!-- List Shows-->
		<control type="list" id="5001">
			<posx>102</posx>
			<posy>40</posy>
			<width>1180</width>
