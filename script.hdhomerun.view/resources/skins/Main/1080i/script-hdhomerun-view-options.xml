                <aligny>top</aligny>
                <textcolor>FFFFFFFF</textcolor>
                <textoffsety>266</textoffsety>
                <texturefocus>script-hdhomerun-view-search_icon_focus.png</texturefocus>
                <texturenofocus>script-hdhomerun-view-search_icon.png</texturenofocus>
            </control>

