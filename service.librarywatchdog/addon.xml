<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.librarywatchdog" name="Library Watchdog" version="1.0.0" provider-name="takoi, phunkyfish">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.watchdog" version="0.10.1"/>
    </requires>
    <extension point="xbmc.service" library="service.py"/>
    <extension point="xbmc.python.script" library="script.py"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Instant library update on file system changes</summary>
        <description lang="en_GB">Library Watchdog will watch your media sources for changes and automatically update the library when new files are added or removed. Update is instant.</description>
        <platform>all</platform>
        <license>GPL-3.0-or-later</license>
        <forum>https://forum.kodi.tv/showthread.php?tid=128896</forum>
        <source>https://github.com/phunkyfish/xbmc-addon-watchdog</source>
    <assets>
        <icon>icon.png</icon>
    </assets>
    </extension>
</addon>
