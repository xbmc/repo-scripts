<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.module.qrcode"
       name="qrcode"
       version="6.1.0+matrix.1"
       provider-name="Lincoln Loop">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.six" version="1.14.0+matrix.1"/>
    <import addon="script.module.pil" version="1.1.7+matrix.1"/> <!-- Python Image Library required to create QR images -->
  </requires>
  <extension point="xbmc.python.module" library="lib" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">QR Code image generator</summary>
    <description lang="en_GB">This module uses image libraries, Python Imaging Library (PIL) by default, to generate QR Codes.</description>
    <license>BSD-3-Clause</license>
    <website>https://pypi.org/project/qrcode/</website>
    <source>https://github.com/lincolnloop/python-qrcode</source>
  </extension>
</addon>
