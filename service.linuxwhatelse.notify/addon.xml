<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.linuxwhatelse.notify"
       name="Notify"
       version="2.1.1"
       provider-name="linuxwhatelse">

    <requires>
        <import addon="xbmc.python" version="2.24.0"/>

        <import addon="script.module.pyqrcode" version="0.0.1"/>
        <import addon="script.module.lwe_mapper" version="1.1.0"/>
    </requires>

    <extension point="xbmc.python.script" library="script.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="service.py" start="login"/>

    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en_GB">Official Notify-Addon for Kodi</summary>
        <description lang="en_GB">The Android-App is currently in beta. To participate in the beta-test you have to join the linuxwhatelse community on Google+ http://goo.gl/UvMw3n</description>
        <license>GNU GENERAL PUBLIC LICENSE Version 2, June 1991</license>
        <website>http://www.linuxwhatelse.com</website>
        <email>info@linuxwhatelse.com</email>
        <source>https://github.com/linuxwhatelse/service.linuxwhatelse.notify</source>
    </extension>
</addon>
