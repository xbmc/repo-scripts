<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.module.dropbox_auth"
       name="Dropbox Authentification"
       version="8.4.2"
       provider-name="schapplm">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.dropbox" version="9.4.0+matrix.1" />
    <import addon="script.module.requests" version="2.22.0+matrix.1" />
    <import addon="script.module.six" version="1.14.0+matrix.1" />
    <import addon="script.module.qrcode" version="6.1.0+matrix.2" /> <!-- For QR Code display for Dropbox API authentication -->
  </requires>
  <extension point="xbmc.python.library" library="authenticate.py" /> <!-- entry to start the authentification script from the settings dialog of other addons -->
  <extension point="xbmc.python.module" library="lib" /> <!-- entry to import this in other addons -->
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Dropbox Auth API</summary>
    <description lang="en_GB">Provide Dropbox Authentification</description>
    <platform>all</platform>
    <language/>
    <license>MIT</license>
    <website></website>
    <source>https://github.com/SchapplM/xbmc-addon-dropboxauth</source>
    <email></email>
  </extension>
</addon>
