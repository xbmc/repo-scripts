<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.bluetooth.delay" name="Bluetooth Delay" version="1.0.0" provider-name="MHR">
	<requires>
		<import addon="xbmc.python" version="3.0.0"/>
	</requires>
	<extension point="xbmc.python.script" library="addon.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Toggle audio delay</summary>
		<description lang="en">Set audio delay for one or two devices, and toggle between them.</description>
		<license>GPL-2.0-only</license>
		<source>https://github.com/MHR-official</source>		
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
		</assets>
	</extension>
</addon>
