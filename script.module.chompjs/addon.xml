<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.module.chompjs"
       name="Chompjs"
       version="1.0.0"
       provider-name="Joaopa00 (jeremielapuree@yahoo.fr)">
  <requires>
    <import addon="xbmc.python"
             version="2.25.0"/>
  </requires>
  <extension point="xbmc.python.module"
