<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.sinaweibo" name="Sina Weibo" version="1.0.0" provider-name="Weibo Fans">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.beautifulsoup4" version="4.3.2"/>
        <import addon="script.module.twitter" version="1.17.1"/>
        <import addon="script.keymap" version="1.0.10"/>
    </requires>
    <extension point="xbmc.python.script" library="main.py"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Connect to Weibo and Twitter</summary>
        <description lang="en_GB">Check your favorite weibo accounts or hashtag, receive "realtime" weibo.</description>
        <license>GNU GENERAL PUBLIC LICENSE. Version 3, June 2007</license>
        <platform>all</platform>
        <website>https://www.weibo.com</website>
        <source>https://github.com/</source>
        <forum>https://forum.kodi.tv</forum>
        <news>v1.0.0[CR]-Improved Service[CR]-Added Video Attachments (Experimental)[CR]-Increased Close Times</news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpeg</fanart>
            <screenshot>resources/images/screenshot01.png</screenshot>
            <screenshot>resources/images/screenshot02.png</screenshot>
            <screenshot>resources/images/screenshot03.png</screenshot>
            <screenshot>resources/images/screenshot04.png</screenshot>
        </assets>
    </extension>
</addon>
