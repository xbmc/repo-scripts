                        <aligny>center</aligny>
                        <font>font10</font>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="110" width="120">
                    <control type="image">
                        <left>0</left>
                        <top>27</top>
                        <width>140</width>
                        <height>133</height>
                        <texture colordiffuse="FF12B2E7" border="40">buttons/button-fo.png</texture>
                    </control>
