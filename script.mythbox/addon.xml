        <import addon="xbmc.python" version="1.0" />
        <import addon="script.module.beautifulsoup"/>
        <import addon="script.module.elementtree"/>
        <import addon="script.module.simplejson"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">MythBox for XBMC</summary>
        <summary lang="fr">MythBox pour XBMC</summary>
        <description lang="en">MythBox is a MythTV frontend for XBMC</description>
        <description lang="fr">MythBox est un frontal MythTV pour XBMC</description>
