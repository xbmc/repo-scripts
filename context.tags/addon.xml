<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="context.tags" name="manageTags" version="0.0.5" provider-name="zosky">
  <requires>
    <import addon="xbmc.python" version="2.25.0"/>
  </requires>
  <extension point="kodi.context.item">
    <menu id="kodi.core.manage">
      <item library="addon.py">
        <label>32000</label>
        <visible>String.IsEqual(ListItem.dbtype,movie) | String.IsEqual(ListItem.dbtype,tvshow)</visible>
      </item>
    </menu>
  </extension>
  <extension point="kodi.addon.metadata">
    <platform>all</platform>
    <summary lang="en_GB">Manage tags for the selected item from the context menu</summary>
    <description lang="en_GB">Adds a context menu entry for movies and tvShows (under manage) to allow the selection of tags</description>
    <license>GNU GENERAL PUBLIC LICENSE. Version 3, 29 June 2007</license>
    <forum>http://forum.kodi.tv/showthread.php?tid=310752</forum>
    <source>https://github.com/zosky/kodi.context.tags</source>
    <news>v0.0.5 | 2017-04-08
- added assets to addon.xml for icon and fanArt to display</news>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
