<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.extendedinfo" name="ExtendedInfo Script" version="4.6.1" provider-name="phil65 (Philipp Temminghoff)">
	<requires>
		<import addon="xbmc.python" version="2.24.0"/>
		<import addon="script.module.simplejson" version="2.0.10"/>
		<import addon="script.module.youtube.dl" version="14.519.1"/>
		<import addon="resource.images.studios.white" version="0.0.5"/>
		<import addon="script.module.autocompletion" version="1.0.0"/>
		<import addon="script.module.actionhandler" version="1.0.1"/>
		<import addon="script.module.t9.search" version="1.0.0"/>
		<!-- 		<import addon="script.module.buggalo" version="1.1.6"/>-->
		<import addon="script.module.pil" version="1.1.7"/>
	</requires>
	<extension point="xbmc.python.script" library="default.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.python.library" library="default.py" />
	<extension point="xbmc.python.pluginsource" library="plugin.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<language/>
		<summary lang="en">ExtendedInfo Script</summary>
		<description lang="en">This script offers various possibilities to display online content inside skins as well as a complete MovieDB browser including info dialogs for various media types. Used services are themoviedb.org, theaudiodb.org, rottentomatoes.com, Trakt.TV, omdbapi.com and a lot more. Needs skin implementation for lot of functions.</description>
		<platform>all</platform>
