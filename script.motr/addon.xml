<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.motr" name="Movies On The Run" version="19.0.3" provider-name="Lars Werner">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.ws4py" version="0.4.3" />
    </requires>
    <extension point="xbmc.python.script" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Movies On The Run (MOTR) client for Kodi</summary>
        <description lang="en_GB">Updated for Kodi Matrix!
Kodi client for connecting to your MOTR server.
Convert, stream or download your movies in Kodi on the go.

Remember queue is common for all users, hold the line.

Addon has been tested with Android, Nvidia Shield, Linux/OpenElec, Mac and Windows.</description>
        <language>en</language>
        <platform>all</platform>
        <license>Apache-2.0</license>
        <website>http://motr.pw</website>
        <source>https://github.com/large/script.motr</source>
        <email>lars@werner.no</email>
        <news>Support for v19 Matrix, now a Video-plugin, "fix" for https selfsigned servers</news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
            <screenshot>screenshot-1.jpg</screenshot>
            <screenshot>screenshot-2.jpg</screenshot>
            <screenshot>screenshot-3.jpg</screenshot>
        </assets>
    </extension>
</addon>
