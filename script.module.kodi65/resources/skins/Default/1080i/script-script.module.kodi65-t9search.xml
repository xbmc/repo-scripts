                        <left>0</left>
                        <top>37</top>
                        <width>140</width>
                        <height>133</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>font10</font>
                        <label>$INFO[ListItem.Label2]</label>
                    </control>
                </focusedlayout>
            </control>
