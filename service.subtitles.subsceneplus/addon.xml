<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.subtitles.subsceneplus"
       name="Subscene Subtitles"
       version="1.0.64"
       provider-name="Cih2001">
  <requires>
    <import addon="xbmc.python" version="2.26.0"/>
    <import addon="script.module.requests" version="2.22.0"/>
    <import addon="script.module.html5lib" version="0.999.0"/>
    <import addon="vfs.libarchive" version="1.0.0"/>
  </requires>
  <extension point="xbmc.subtitle.module"
             library="service.py" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Subscene.com Subtitles</summary>
    <description lang="en_GB"> A convenient addon to download subtitles from subscene.com. If you find it useful, please consider giving it a star in github. This is being actively maintained. In case of any problem, feel free to open an issue in github.
    </description>
    <platform>all</platform>
    <license>GPL-2.0-or-later</license>
    <source>https://github.com/Cih2001/KodiSubsceneAddon</source>
    <assets>
        <icon>logo.png</icon>
    </assets>
  </extension>
</addon>
