<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.recap" name="Recap" version="1.0.0" provider-name="robwebset">
	<requires>
		<import addon="xbmc.python" version="2.20.0"/>
		<import addon="script.module.beautifulsoup" version="3.2.1"/>
		<import addon="script.module.requests" version="2.3.0"/>
	</requires>
  	<extension point="xbmc.python.script" library="default.py"/>
	<extension point="xbmc.service" library="service.py" start="login"/>
	<extension point="kodi.context.item" library="default.py">
		<item>
			<label>32001</label>
			<visible>IsEmpty(Window(videos).Property("RecapHideContextMenu")) + [Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)]</visible>
		</item>
	</extension>
	<extension point="kodi.context.item" library="previous.py">
		<item>
			<label>32011</label>
			<visible>IsEmpty(Window(videos).Property("RecapPreviousHideContextMenu")) + Container.Content(episodes) + [IntegerGreaterThan(ListItem.Episode,1) | IntegerGreaterThan(ListItem.Season,1)]</visible>
		</item>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Visual summary of a TV Show</summary>
		<description lang="en">Shows a summary of what has happened in a TV Episode, including images</description>
		<language></language>
		<platform>all</platform>
		<license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
		<forum>http://forum.kodi.tv/showthread.php?tid=275040</forum>
		<source>https://github.com/robwebset/script.recap</source>
	</extension>
</addon>
