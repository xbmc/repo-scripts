<?xml version="1.0" encoding="UTF-8"?>
<window>
    <!-- 1280 x 720 -->
    <include>Animation_DialogPopupOpenClose</include>
    <depth>DepthOSD</depth>
    <defaultcontrol always="true">32500</defaultcontrol>
    <controls>
        <control type="group">
            <!-- Background -->
            <control type="image">
                <left>190</left>
                <top>50</top>
                <width>900</width>
                <height>620</height>
                <texture colordiffuse="F0F0F0F0">AddonWindow/black.png</texture>
            </control>

            <control type="button" id="32500">
                <!-- Close button -->
                <left>1035</left>
                <top>68</top>
                <width>32</width>
                <height>32</height>
                <texturefocus colordiffuse="button_focus">Button/close.png</texturefocus>
                <texturenofocus colordiffuse="EEFFFFFF">Button/close.png</texturenofocus>
                <ondown>32502</ondown>
            </control>

            <control type="label" id="32501">
                <!-- Window title -->
                <left>290</left>
                <top>75</top>
                <width>700</width>
                <height>30</height>
                <font>font14</font>
                <align>center</align>
                <aligny>center</aligny>
                <scroll>true</scroll>
                <textcolor>white</textcolor>
                <shadowcolor>AA000000</shadowcolor>
            </control>

            <control type="scrollbar" id="32502">
                <!-- Scrollbar -->
                <left>1055</left>
                <top>140</top>
                <width>10</width>
                <height>510</height>
                <onup>32500</onup>
                <showonepage>false</showonepage>
                <orientation>vertical</orientation>
            </control>

            <control type="textbox" id="32503">
                <!-- Text Box -->
                <left>215</left>
                <top>140</top>
                <width>815</width>
                <height>510</height>
                <visible>true</visible>
                <colordiffuse>FFFFFFFF</colordiffuse>
                <font>font13</font>
                <textcolor>FFFFFFFF</textcolor>
                <pagecontrol>32502</pagecontrol>
                <align>left</align>
            </control>
        </control>
    </controls>
</window>
