            <posx>325</posx>
            <posy>140</posy>
            <width>340</width>
            <height>35</height>
            <font>font12</font>
            <textcolor>ffddddff</textcolor>
            <selectedcolor>FFe2ff43</selectedcolor>
            <align>left</align>
            <aligny>center</aligny>
