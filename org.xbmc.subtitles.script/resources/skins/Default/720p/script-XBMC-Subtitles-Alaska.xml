<window>
  <defaultcontrol>101</defaultcontrol>
  <coordinates>
    <system>1</system>
    <posx>0</posx>
    <posy>0</posy>
  </coordinates>
  <animation effect="fade" time="250">WindowOpen</animation>
  <animation effect="fade" time="250">WindowClose</animation>

  
<controls>
    <control type="group">
      <posx>300</posx>
      <posy>100</posy>

      <control type="image">
        <description>Background Image</description>
        <posx>-20</posx>
        <posy>0</posy>
        <width>800</width>
        <height>520</height>
        <texture border="23">common_panel.png</texture>
		<colordiffuse>PanelDiffuse</colordiffuse>
      </control>

      <!-- ** Required ** Do not change <id> or <type> -->
      <control type="image" id="110">
        <description>Service Logo</description>
        <posx>20</posx>
        <posy>20</posy>
        <width>300</width>
        <height>50</height>
      </control>

    <control type="label" id="300">
        <description>textarea</description>
        <posx>500</posx>
        <posy>30</posy>
        <width>600</width>
        <height>22</height> 
        <textcolor>PanelListItem</textcolor>
		<focusedcolor>PanelListItemFocused</focusedcolor>
        <label>$LOCALIZE[SCRIPT601]</label>
		<font>Font_PanelItemLabel</font>
        <align>right</align>    
    </control>            
		
    <control type="label" id="301">
        <description>textarea</description>
        <posx>570</posx>
        <posy>30</posy>
        <width>190</width>
        <height>22</height>
		<textcolor>PanelListItem</textcolor>
		<focusedcolor>PanelListItemFocused</focusedcolor>
        <label>$LOCALIZE[SCRIPT602]</label>
		<font>Font_PanelItemLabel</font>
    </control> 
                                          
    <control type="image">
        <posx>510</posx>
        <posy>37</posy>
        <width>54</width>
        <height>14</height>
        <texture>icon_sync.png</texture>
        <visible>True</visible>
    </control>  
                
		
    <control type="image">
        <posx>15</posx>
        <posy>70</posy>
        <width>730</width>
        <height>2</height>
        <texture>divider.png</texture>
		<colordiffuse>PanelDiffuseDivider</colordiffuse>
    </control>
	  
	  
    <control type="label" id="100">
        <description>textarea</description>
        <posx>30</posx>
        <posy>70</posy>
        <width>680</width>
        <height>40</height>
		<textoffsetx>8</textoffsetx>
		<textcolor>PanelListItem</textcolor>
		<focusedcolor>PanelListItemFocused</focusedcolor>
		<font>Font_PanelItemLabel</font>	
        <aligny>center</aligny>
        <wrapmultiline>true</wrapmultiline>
    </control>
	  
    <control type="image">
        <posx>15</posx>
        <posy>110</posy>
        <width>730</width>
        <height>2</height>
        <texture>divider.png</texture>
		<colordiffuse>PanelDiffuseDivider</colordiffuse>
    </control>
	  
      <!-- ** Required ** Do not change <id> or <type> -->
	  
    <control type="list" id="120">
        <posx>20</posx>
        <posy>126</posy>
        <width>800</width>
        <height>348</height>
        <onleft>120</onleft>
        <onright>120</onright>
        <onup>110</onup>
        <ondown>110</ondown>
        <viewtype label="535">list</viewtype>
        <pagecontrol>121</pagecontrol>
        <scrolltime>200</scrolltime>
		
    <itemlayout height="38">
		
          <control type="image">
            <posx>0</posx>
            <posy>36</posy>
            <width>800</width>
            <height>2</height>
            <texture border="10">default-list-nofocus.png</texture>
          </control>
		  
          <control type="image">
            <posx>5</posx>
            <posy>12</posy>
            <width>22</width>
            <height>15</height>
            <info>Listitem.Thumb</info>
          </control>
		 
          <control type="label">
            <posx>25</posx>
            <posy>-6</posy>
            <width>130</width>
            <height>48</height>
            <aligny>center</aligny>
			<textoffsetx>8</textoffsetx>
            <textcolor>PanelListItem</textcolor>
			<focusedcolor>PanelListItemFocused</focusedcolor>
			<font>Font_PanelItemLabel</font>
            <selectedcolor>Selected</selectedcolor>
            <align>left</align>
            <info>ListItem.Label</info>
          </control>
		  
          <control type="image">
            <posx>115</posx>
            <posy>16</posy>
            <width>35</width>
            <height>10</height>
            <texture>icon_sync.png</texture>
            <visible>ListItem.property(sync)</visible>       
          </control> 
          
        <control type="label">
            <posx>160</posx>
            <posy>-6</posy>
            <width>400</width>
            <height>48</height>
            <aligny>center</aligny>
            <textoffsetx>8</textoffsetx>
            <textcolor>PanelListItem</textcolor>
            <focusedcolor>PanelListItemFocused</focusedcolor>
            <font>Font_PanelItemLabel</font>
            <selectedcolor>Selected</selectedcolor>
            <align>left</align>
            <info>ListItem.Label2</info>
        </control>
        
        <control type="image">
            <posx>600</posx>
            <posy>11</posy>
            <width>90</width>
            <height>17</height>
            <texture>info_window_icon_rating_star_$INFO[ListItem.ActualIcon].png</texture>
        </control>
		
    </itemlayout>
	
    <focusedlayout height="38">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>700</width>
            <height>38</height>
            <texture border="10">default-list-focus.png</texture>
            <visible>Control.HasFocus(120)</visible>
          </control>
          <control type="image">
            <posx>5</posx>
            <posy>12</posy>
            <width>22</width>
            <height>15</height>
            <info>Listitem.Thumb</info>
          </control>
          <control type="label">
            <posx>25</posx>
            <posy>-6</posy>
            <width>130</width>
            <height>48</height>
            <aligny>center</aligny>
			<textoffsetx>8</textoffsetx>
            <textcolor>PanelListItemFocused</textcolor>
			<font>Font_PanelItemLabel</font>
            <align>left</align>
            <info>ListItem.Label</info>
          </control>
            <control type="image">
            <posx>115</posx>
            <posy>16</posy>
            <width>35</width>
            <height>10</height>
            <texture>icon_sync.png</texture>
            <visible>ListItem.property(sync)</visible>
            <colordiffuse>PanelListItemFocused</colordiffuse>
          </control> 
          <control type="label">
            <posx>160</posx>
            <posy>-6</posy>
            <width>400</width>
            <height>48</height>
            <aligny>center</aligny>
			<textoffsetx>8</textoffsetx>
            <textcolor>PanelListItemFocused</textcolor>
			<font>Font_PanelItemLabel</font>
            <align>left</align>
            <info>ListItem.Label2</info>
          </control>
          <control type="image">
            <posx>600</posx>
            <posy>11</posy>
            <width>90</width>
            <height>17</height>
            <texture>info_window_icon_rating_star_$INFO[ListItem.ActualIcon].png</texture>
            </control>
			
	</focusedlayout>
    </control>
	
				<!-- Scroll Bar -->

    <control type="group">
        <posx>725</posx>
        <posy>126</posy>
        <control type="scrollbar" id="121">
          <description>scroll bar indicator for lists</description>
          <posx>0</posx>
          <posy>0</posy>
          <width>12</width>
          <height>350</height>
          <texturesliderbackground border="0,14,0,14">scrollbarv.png</texturesliderbackground>
          <texturesliderbar border="0,14,0,14">ScrollBarV_Nib_Focus.png</texturesliderbar>
          <texturesliderbarfocus border="0,14,0,14">ScrollBarV_Nib_Focus.png</texturesliderbarfocus>
          <textureslidernib>-</textureslidernib>
          <textureslidernibfocus>PanelListItemFocused</textureslidernibfocus>
          <orientation>vertical</orientation>
          <showonepage>false</showonepage>
          <visible>Control.IsVisible(120)</visible>
        </control>
      </control>

    </control>
</controls>
</window>
